<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipMinHeight">40dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="AppTheme.ChipTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

</resources>